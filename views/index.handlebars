    <div class="container">
<h1 class="text-center">Eat-Da-Burger!</h1>

<div class="row">
  
<h2 class="text-center">Add a Burger</h2>
</div>
<div class="row">
<br/>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>


 <div class="row">
 
    <div class="col-md-6">

<h2>Burgers you want to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> burgers/burger-block}} --}}
      {{> burgers/burger-block devour=true}}
      {{!-- {{> burgers/burger-block sleep=true}} --}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6">
<h2>Burgers you have devoured!!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>



</div>

</div>